<%- include('common/head')%>
<!-- ======== Preloader =========== -->
<div id="preloader">
  <div class="spinner"></div>
</div>
<!-- ======== Preloader =========== -->

<%- include('common/sidebar')%>

<!-- ======== main-wrapper start =========== -->
<main class="main-wrapper">
  <%- include('common/navbar')%>

  <!-- ========== tab components start ========== -->
  <section class="tab-components">
    <div class="container-fluid">
      <!-- ========== title-wrapper start ========== -->
      <div class="title-wrapper pt-30">
        <div class="row align-items-center">
          <div class="col-md-6">
            <div class="title">
              <h2>Form Elements</h2>
            </div>
          </div>
          <!-- end col -->
          <div class="col-md-6">
            <div class="breadcrumb-wrapper">
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="#0">Dashboard</a>
                  </li>
                  <li class="breadcrumb-item"><a href="#0">Forms</a></li>
                  <li class="breadcrumb-item active" aria-current="page">
                    Disease Elements
                  </li>
                </ol>
              </nav>
            </div>
          </div>
          <!-- end col -->
        </div>
        <!-- end row -->
      </div>
      <!-- ========== title-wrapper end ========== -->

      <!-- ========== form-elements-wrapper start ========== -->
      <div class="form-elements-wrapper">
        <div class="row">
          <div class="col-lg-5">
            <!-- input style start -->
            <form action="/disease/create" method="post">
              <div class="card-style mb-30">
                <h6 class="mb-25">Input Fields</h6>
                <div class="input-style-1">
                  <label>Disease Title</label>
                  <input
                    type="text"
                    placeholder="Disease Title"
                    name="disease_title"
                  />
                </div>
                <!-- end input -->
                <div class="input-style-1">
                  <label>Disease Description</label>
                  <textarea
                    placeholder="Disease Description"
                    name="disease_description"
                    rows="5"
                  ></textarea>
                </div>
                <!-- end textarea -->
                <div class="select-style-1">
                  <label>Specility</label>
                  <div class="select-position">
                    <select name="specialitiesid">
                      <option value="">Select Specialites</option>
                      <% for(let data2 of spec){%>
                      <option value="<%= data2.id%>"><%= data2.title%></option>
                      <%}%>
                    </select>
                  </div>
                  <label>Treatment</label>
                  <div class="select-position">
                    <select name="treatmentid">
                      <option value="">Select Treatment</option>
                      <% for(let data of treatment){%>
                      <option value="<%= data.id%>">
                        <%= data.treatment%>
                      </option>
                      <%}%>
                    </select>
                  </div>
                </div>
                <div class="input-style-2">
                  <label>Disease Image</label>
                  <input type="text" placeholder="Disease Image" name="image" />
                  <span class="icon"> <i class="lni lni-save"></i></span>
                </div>
                <button class="main-btn active-btn rounded-full btn-hover">
                  Submit
                </button>
              </div>
            </form>
            <!-- end card -->
            <!-- ======= input style end ======= -->
          </div>
          <!-- end col -->
          <div class="col-lg-7">
            <!-- input style start -->
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">All Banner</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example2" class="table table-hover">
                  <thead>
                    <tr>
                      <th>Title</th>
                      <th>Sub Title</th>
                      <th>Id</th>
                      <th>Id</th>
                      <th>Image</th>
                      <th>delete</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% for(let data of disease){%>
                    <tr>
                      <td><%=data.disease_title%></td>
                      <td><%=data.disease_description%></td>

                      <!-- uploads\1689934057439.jpg -->
                      <td>
                        <p><%=data.treatmentid.toString().slice(0,5)%></p>
                      </td>
                      <td>
                        <p><%=data.specialitiesid.toString().slice(0,5)%></p>
                      </td>
                      <td>
                        <p><%=data.image%></p>
                      </td>
                      <td>
                        <a
                          href="/diseaseedit/<%= data._id%>"
                          class="btn btn-info"
                          >Edit</a
                        >
                        <a
                          href="/diseaseDelete/<%= data._id%>"
                          class="btn btn-danger"
                          >Delete</a
                        >
                      </td>
                    </tr>
                    <%} %>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- end card -->
            <!-- ======= input style end ======= -->
          </div>
          <!-- end col -->
        </div>
        <!-- end row -->
      </div>
      <!-- ========== form-elements-wrapper end ========== -->
    </div>
    <!-- end container -->
  </section>
  <!-- ========== tab components end ========== -->

  <%- include('common/footer')%>
</main>
<!-- ======== main-wrapper end =========== -->
<%- include('common/foot')%>
